.menu-container {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  padding: 10rpx;
}

.menu-tab {
  display: flex;
  position: relative; /* 新增此行，确保角标相对于按钮定位 */
  margin: 20rpx;
  height: 140px;
  align-items: center;
  justify-content: center;
  box-shadow: 0px 0px 8px rgb(170, 170, 170) inset;
}

.menu-tab-hover {
  display: flex;
  position: relative; /* 新增此行 */
  margin: 20rpx;
  height: 140px;
  align-items: center;
  justify-content: center;
  box-shadow: 0px 0px 12px #969696 inset;
}

